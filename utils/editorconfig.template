root=true

[*]
indent_style = space
indent_size = 4
continuation_indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

[*.{java,kt,kts,scala,kt.spec,kts.spec}]
max_line_length = 120

[*.py]
max_line_length = 88

[*.sh]
indent_size = 2
continuation_indent_size = 4

[*.bat]
indent_style = tab
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false